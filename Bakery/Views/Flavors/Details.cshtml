@model Bakery.Models.Flavor
@using Bakery.Models

<h2>@Model.Name</h2>

@if (Model.JoinEntities != null && Model.JoinEntities.Any())
{
    <ul>
        @foreach (var jt in Model.JoinEntities)
        {
            <li>@jt.Treat.Name</li>
        }
    </ul>
   
}
else
{
    <p>This flavor is not associated with any treats yet.</p>
}
 <p>
    @Html.ActionLink("Add Treat", "AddTreat", new { flavorId = Model.FlavorId }) | 
    @Html.ActionLink("Edit", "Edit", new { id = Model.FlavorId }) |
    @Html.ActionLink("Back to List", "Index")
</p>