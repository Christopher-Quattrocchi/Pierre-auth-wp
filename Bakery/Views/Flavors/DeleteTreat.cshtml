@model Bakery.Models.FlavorTreat

@{
    ViewData["Title"] = "Delete Treat Confirmation";
}

<h2>Delete Treat Confirmation</h2>

<p>Are you sure you want to delete this treat from the flavor?</p>

<div>
    <strong>Flavor:</strong> @Model.Flavor.Name<br />
    <strong>Treat:</strong> @Model.Treat.Name
</div>

@using (Html.BeginForm("DeleteTreatConfirmed", "Flavors", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    @Html.HiddenFor(model => model.FlavorId)
    @Html.HiddenFor(model => model.TreatId)
    
    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        @Html.ActionLink("Cancel", "Details", new { id = Model.FlavorId }, new { @class = "btn btn-default" })
    </div>
}
